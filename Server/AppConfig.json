{
    "welcome": "Welcome to Yann's NodeJS server!",
    "name": "FirstGameServer",
    "mode": "debug",
    "errorPath": "Error/",
    "debug": 
    {
        "port": 8000,
        "publicDirectory": "Client",
        "cacheTimer": 0
    },
    "production": 
    {
        "port": 8001,
        "publicDirectory": "Client",
        "cacheTimer": 3600
    },
    "routes": 
    {
        "plop":
        {
            "pattern": "{Controllers}/{View}/{BonhommeEnMousse}/{Action}/{ids}",
            "defaultValue":
            {
                "Controllers": "Accueil",
                "Action": "Index"
            }
        },
        "defaultRoute":
        {
            "pattern": "{Controllers}/{Action}",
            "defaultValue":
            {
                "Controllers": "Accueil",
                "Action": "Index"
            }
        }
    }
}
